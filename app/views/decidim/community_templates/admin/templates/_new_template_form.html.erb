<div class="card">
  <div class="row column pt-4">
    <div class="item_show__header">
      <h2 class="item_show__header-title">
        <%= t("decidim.community_templates.admin.templates.index.new_from_space") %>
      </h2>
    </div>
  </div>

  <div class="form__wrapper">
    <%= decidim_form_for(@template_form, html: { class: "form-defaults form new_template" }, url: decidim_admin_community_templates.templates_path) do |f| %>
      <div class="row column">
        <%= f.select :participatory_space_id, grouped_options_for_select(participatory_spaces.transform_values(&:invert)), include_blank: true, label: t("decidim.community_templates.admin.templates.index.select_participatory_space") %>
      </div>

      <div class="row column">
        <%= f.submit t("decidim.community_templates.admin.templates.index.create_template"), class: "button button__sm button__secondary" %>
      </div>
    <% end %>
  </div>
</div>
